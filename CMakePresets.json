{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19,
        "patch": 0
    },
    "include": [
        "./.cmake/CMakePresets-configure.json",
        "./.cmake/CMakePresets-build.json"
    ],
    "configurePresets": [
        {
            "name": "linux-x64-ninja-clang-debug",
            "displayName": "Linux clang debug",
            "inherits": [
                "use-ninja",
                "use-default-dirs",
                "use-debug",
                "use-clang",
                "linux-base"
            ]
        },
        {
            "name": "linux-x64-ninja-clang-release",
            "displayName": "Linux clang release",
            "inherits": [
                "use-ninja",
                "use-default-dirs",
                "use-release",
                "use-clang",
                "linux-base"
            ]
        },
        {
            "name": "windows-x64-ninja-clang-debug",
            "displayName": "Windows clang Debug",
            "inherits": [
                "use-ninja",
                "use-default-dirs",
                "use-debug",
                "use-clang-cl",
                "windows-base"
            ]
        },
        {
            "name": "windows-x64-ninja-clang-release",
            "displayName": "Windows clang Release",
            "inherits": [
                "use-ninja",
                "use-default-dirs",
                "use-release",
                "use-clang-cl",
                "windows-base"
            ]
        },
        {
            "name": "macos-x64-ninja-clang-debug",
            "displayName": "MacOS clang Debug",
            "inherits": [
                "use-ninja",
                "use-default-dirs",
                "use-debug",
                "use-clang-cl",
                "macos-base"
            ]
        },
        {
            "name": "macos-x64-ninja-clang-release",
            "displayName": "MacOS clang Release",
            "inherits": [
                "use-ninja",
                "use-default-dirs",
                "use-release",
                "use-clang-cl",
                "macos-base"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "linux-debug-build",
            "displayName": "Linux Debug",
            "inherits": [
                "debug-build",
                "linux-build-base"
            ],
            "configurePreset": "linux-x64-ninja-clang-debug"
        },
        {
            "name": "linux-release-build",
            "displayName": "Linux Release",
            "inherits": [
                "release-build",
                "linux-build-base"
            ],
            "configurePreset": "linux-x64-ninja-clang-release"
        },
        {
            "name": "windows-debug-build",
            "displayName": "Win Debug",
            "inherits": [
                "debug-build",
                "windows-build-base"
            ],
            "configurePreset": "windows-x64-ninja-clang-debug"
        },
        {
            "name": "windows-release-build",
            "displayName": "Win Release",
            "inherits": [
                "release-build",
                "windows-build-base"
            ],
            "configurePreset": "windows-x64-ninja-clang-release"
        },
        {
            "name": "macos-debug-build",
            "displayName": "MacOS Debug",
            "inherits": [
                "debug-build",
                "macos-build-base"
            ],
            "configurePreset": "macos-x64-ninja-clang-debug"
        },
        {
            "name": "macos-release-build",
            "displayName": "MacOS Release",
            "inherits": [
                "release-build",
                "macos-build-base"
            ],
            "configurePreset": "macos-x64-ninja-clang-release"
        }
    ]
}