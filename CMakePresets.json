{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "use-ninja",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "default-dirs",
            "hidden": true,
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}"
        },
        {
            "name": "debug-build",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "USE_DEBUG_OUTPUT": "ON",
                "USE_LOG": "ON",
                "USE_LOG_SEVERITY": "0"
            }
        },
        {
            "name": "release-build",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "USE_DEBUG_OUTPUT": "OFF",
                "USE_LOG": "OFF",
                "CMAKE_C_FLAGS" : "$env{C_FLAGS} -Wall -Wextra -Werror -pedantic -O3"
            }
        },
        {
            "name": "use-clang",
            "hidden": true,
            "inherits": [
                "default-dirs",
                "use-ninja"
            ],
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_C_STANDARD" : "23"
            }
        },
        {
            "name": "use-clang-cl",
            "hidden": true,
            "inherits": [
                "default-dirs",
                "use-ninja"
            ],
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang.exe",
                "CMAKE_CXX_COMPILER": "clang++.exe",
                "CMAKE_C_STANDARD" : "23"
            }
        },
        {
            "name": "linux-base",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "linux-clang-debug",
            "displayName": "Linux clang debug",
            "inherits": [
                "linux-base",
                "use-clang",
                "debug-build"
            ]
        },
        {
            "name": "linux-clang-release",
            "displayName": "Linux clang release",
            "inherits": [
                "linux-base",
                "use-clang",
                "release-build"
            ]
        },
        {
            "name": "windows-base",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "CMAKE_MAKE_PROGRAM": "C:/Program Files/Ninja/ninja.exe"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "toolset": {
                "value": "v143,host=x64",
                "strategy": "external"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": "Windows",
                    "intelliSenseMode": "windows-clang-x64"
                }
            }
        },
        {
            "name": "windows-clang-debug",
            "displayName": "Windows x64 clang Debug",
            "inherits": [
                "windows-base",
                "use-clang-cl",
                "debug-build"
            ]
        },
        {
            "name": "windows-clang-release",
            "displayName": "Windows x64 clang Release",
            "inherits": [
                "windows-base",
                "use-clang-cl",
                "release-build"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "linux-clang-debug",
            "description": "",
            "displayName": "Linux clang Debug",
            "configurePreset": "linux-clang-debug",
            "cleanFirst": true
        },
        {
            "name": "linux-clang-release",
            "description": "",
            "displayName": "Linux clang Release",
            "configurePreset": "linux-clang-release",
            "cleanFirst": true
        },
        {
            "name": "windows-clang-debug",
            "description": "",
            "displayName": "windows x64 clang debug",
            "configurePreset": "windows-clang-debug"
        },
        {
            "name": "windows-clang-release",
            "description": "",
            "displayName": "windows x64 clang release",
            "configurePreset": "windows-clang-release"
        }
    ]
}