import ../../core.rpc

server
    name 'router'
    port auto


type LogSeverety i32

include ../loglevel.h
include ../logerror.h



log_service logerr_t log(log_level_t level, cstr msg)

alias debug(cstr msg) -> log(-1, msg)

alias info(cstr msg) -> log(0, msg)

alias warning(cstr msg) -> log(10, msg)
alias warn -> warning

alias error(cstr msg) -> log(20, msg)
alias err -> error

alias critical(cstr msg) -> log(20, msg)
alias crit -> crit

alias fatal(cstr msg) -> log(30, msg)